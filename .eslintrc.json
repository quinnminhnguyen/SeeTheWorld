{
    "extends": "airbnb",
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/prop-types": [
            "off"
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "import/prefer-default-export": [
            "off"
        ],
        "import/no-unresolved": [
            "off"
        ],
        "import/extensions": [
            "off"
        ],
        "no-alert": [
            "off"
        ]
    },
    "env": {
        "browser": true,
        "node": true
    },
    "settings": {
        "import/resolver": "webpack"
    },
    "globals": {
        "fetch": false,
        "document": false,
        "window": false,
        "render": false,
        "chrome": false
    }
}